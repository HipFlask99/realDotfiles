#change my prompt name
anon() {
  local name="anonymous"
  local host="gentoo"

  PS1=${PS1//\\u/"$name"} PS1=${PS1//\\h/"$host"}
  clear
}

alias ,="ls -a"
alias ..='cd .. && ls -a'
alias gm='git commit -m'
alias ga='git add -A'
alias h='htop'
alias sad='sudo dnf update && sudo dnf -y upgrade'
alias yin='sudo dnf install'
alias sag='sudo apt-get install'

#ls after cd
c() { cd "$@" && ls; }
